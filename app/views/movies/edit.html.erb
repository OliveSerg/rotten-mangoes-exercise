<%= link_to "Back to all movies", movies_path %>
<h2>Edit this movie</h2>
<%= form_for @movie do |f| %>
  <div class="form-field">
    <%= f.label "title" %><br>
    <%= f.text_field "title" %>
  </div>
  <div class="form-field">
    <%= f.label "director" %><br>
    <%= f.text_field "director" %>
  </div>
  <div class="form-field">
    <%= f.label "description" %><br>
    <%= f.text_area "description" %>
  </div>
  <div class="form-field">
    <%= f.submit "Save" %>
  </div>
<% end %>
