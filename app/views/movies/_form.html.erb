<%= form_for @movie, html:{multipart: true} do |f| %>
  <% if @movie.errors.any? %>
    <div>
      <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted:
      <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-field">
    <%= f.label "title" %><br>
    <%= f.text_field "title" %>
  </div>
  <div class="form-field">
    <%= f.label "director" %><br>
    <%= f.text_field "director" %>
  </div>
  <div class="form-field">
    <%= f.label "description" %><br>
    <%= f.text_area "description" %>
  </div>
  <div class="form-field">
    <%= f.label "runtime_in_minutes"%>
    <%= f.number_field "runtime_in_minutes"%>
  </div>
  <div class="form-field">
    <%= f.label "Image"%>
    <%= f.file_field "image"%>
    <%= f.url_field "remote_image_url"%>
  </div>
  <div class="form-field">
    <%= f.label "release_date"%>
    <%= f.date_field "release_date"%>
  </div>
  <div class="form-field">
    <%= f.label "categories"%>
    <%= f.text_field "categories"%>
  </div>
  <div class="form-field">
    <%= f.submit "Save" %>
  </div>
<% end %>
