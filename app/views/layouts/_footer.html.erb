<footer>
  <hr>
  <small>
    <% if current_user %>
      Signed in as <%= link_to current_user.full_name, "/profile/#{current_user.id}" %> (<%= link_to "Log out", session_path("current"), method: :delete %>)
      <% if current_user.admin? %>
        <%= link_to "Users", admin_users_path %>
        <%= button_tag(type: 'button') do
          content_tag(:strong,"Switch Back")
        end %>
      <% end %>
    <% else %>
      <%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_user_path %>
    <% end %>
  </small>
</footer>
